@model restauranter.Models.Restaurant
@{
    ViewData["Title"] = "Home Page";
}
<h1>Enter Restaurant Review!!!</h1>

<form asp-controller="Home" asp-action="AddReviewToDb" method="POST">
    <label asp-for="ReviewerName">Reviewer Name: </label>
    <input asp-for="ReviewerName"><span asp-validation-for="ReviewerName"></span><br>
    <label asp-for="RestaurantName">Restaurant Name: </label>
    <input asp-for="RestaurantName"><span asp-validation-for="RestaurantName"></span><br>
    <label asp-for="Review">Review: </label><br>
    <textarea asp-for="Review"></textarea><span asp-validation-for="Review"></span><br>
    <label asp-for="VisitDate">Date of Visit: </label>
    <input type="date" asp-for="VisitDate"><span asp-validation-for="VisitDate"></span><br>
    <label asp-for="Stars">Stars: </label>
    <select asp-for="Stars">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    </select><span asp-validation-for="Stars"></span><br>
    <button>Submit</button>
</form>